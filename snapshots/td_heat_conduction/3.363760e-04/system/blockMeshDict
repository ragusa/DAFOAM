        type patch;
        faces
        (
            (2 3 7 6) // Top side (constant temperature)
        );
    }
    bottom
    {
        type patch;
        faces
        (
            (0 1 5 4) // Bottom side (heat flux boundary)
        );
    }
    frontAndBack
    {
        type empty; // For 2D cases
        faces
        (
            (0 1 2 3)
            (4 5 6 7)
        );
    }
