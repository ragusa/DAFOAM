(
   (0 0 0)    // Vertex 0
    (0.5 0 0)    // Vertex 1
    (0.5 1 0)  // Vertex 2
    (0 1 0)  // Vertex 3
    (0 0 0.1)  // Vertex 4 (for 3D setup but will be empty)
    (0.5 0 0.1)  // Vertex 5
    (0.5 1 0.1)// Vertex 6
    (0 1 0.1)// Vertex 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (100 200 1) simpleGrading (1 1 1) // 100 cells in x, 200 in y
);

